		<script type="text/javascript">
			$(function() {
				//获取屏幕高度
				var Wheight = window.innerHeight;
				var bottomHeight = $(".footer").outerHeight();
				$("body").height(Wheight);

				//按百分比设置不同手机屏图片高度
				$('.details .indexImg').css({
					'height': Wheight * 0.28
				});
				$('.details').css({
					'height': Wheight - bottomHeight - 10
				});

				//滚动到不同区域输入框样式
				$(window).bind('scroll', showInput)

				function showInput() {
					var windowScrill = $(window).scrollTop();
					var detailHeight = $('.details').offset().top;
					if (windowScrill > detailHeight) {
						$(".talkFooter").addClass("focus");
					} else {
						$(".talkFooter").removeClass("focus");
					}
				}

				//软键盘拉起收回输入框样式
				$(window).resize(function() {
					var winHeight = window.innerHeight;
					if (winHeight < Wheight) {
						//软键盘拉起
						$(".talkFooter").addClass("focus");
						$(window).unbind('scroll', showInput);
					} else {
						$(".replayInputBox").hide();
						$(".commentInputBox").show();
						if (!$(".input").html().length) {
							showInput();
							$(window).bind('scroll', showInput);
						} else {
							$(".talkFooter").addClass("focus");
						}
					}
				})

				//评论输入框获取焦点效果
				$(".talkInput .input").focus(function() {
					$(".talkFooter").addClass("focus");
				});

				//输入框输入效果
				$(".input").keyup(function() {
					if ($(this).html().length) {
						$(".iconSend").show();
					} else {
						$(".iconSend").hide();
					}
				})
				//模拟回复数据
				var arr = [{
					"id": "0001",
					"username": "大诗人",
					"userImg": "images/quyuan.png",
					"comtext": "其实孤身并不意味着孤独，我只是喜欢独自一人路过山川湖海",
					"time": "昨天 12:58",
					"heart": "8"
				}, {
					"id": "0002",
					"username": "小凉凉",
					"userImg": "images/icon_photo2.jpg",
					"comtext": "拥抱自己比拥抱世界容易的多也快乐的多",
					"time": "6/15 12:58",
					"heart": "29"
				}, {
					"id": "0003",
					"username": "屈原",
					"userImg": "images/icon_photo.jpg",
					"comtext": "孤独不曾远离，幸福却也无处不在，只是自己总是不愿意去拾起那些飘落，只想把希望留给那些等待的人，他们也需要心灵的美酒",
					"time": "昨天 12:58",
					"heart": "8"
				}, {
					"id": "0004",
					"username": "奶泡想吃奶昔",
					"userImg": "images/quyuan.png",
					"comtext": "每个人都在这里没日没夜的穿梭。灯火繁华的城市、它也很寂寞。",
					"time": "6/15 12:58",
					"heart": "29"
				}]
				$(".comList").on("click", '.open', function() {
					console.log("pppp")
					for (i of arr) {
						var str = '';
						str += '<div class="commentInfo" id="' + i.id + '"><div class="comleft"><img src="' + i.userImg +
							'" class="comIcon h60"></div><div class="comcenter"><p class="title">' + i.username +
							'</p><div class="replay"><p class="text textCopy">' + i.comtext + '<span class="comtime">' + i.time +
							'</span></p></div></div><div class="comright"><p class="heartIcon"><img src="images/icon_heart.png" class="heart"><img src="images/icon_heartBule.png" class="heartActive"><span>' +
							i.heart + '</span></p></div></div>';
						$(this).prev(".replayContent").append(str)
					}
					$(this).html("展开更多回复")
				})
				//发表评论
				var isreplay = $(".input").hasClass("replayInput");
				var userName = $(".detailUser span").html();
				var userPhoto = $(".detailUser img").attr('src');
				$(".commentInputBox .iconSend").click(function() {
					// var D = new Date();
					// var date = D.getFullYear() + '/' + (D.getMonth() + 1) + '/' + D.getDate();
					// var time = D.getHours() + ':' + D.getMinutes();
					var text = $(".commentInputBox .input").html();
					var strComment = '<div class="list"><div class="commentInfo"><div class="comleft"><img src="' + userPhoto +
						'" class="comIcon h60"></div><div class="comcenter"><p class="title">' + userName +
						'</p><div class="replay"><p class="text textCopy">' + text +
						'<span class="comtime">刚刚</span></p></div></div><div class="comright"><p class="heartIcon"><img src="images/icon_heart.png" class="heart"><img src="images/icon_heartBule.png" class="heartActive"><span>0</span></p></div></div><div class="replayContent"></div><p class="open hide">展开<i>0</i>条回复</p></div>';
					$(".comList").prepend(strComment);
					$(".input").html('');
					$(".iconSend").hide();
				})
				//回复评论
				$(".comList").on("click", '.replay', function() {
					$(".replayInputBox").show().find(".input").focus();
					$(".commentInputBox").hide();
					$(".replayContent").removeClass("currentReplay");
					$(this).parents(".list").find(".replayContent").addClass("currentReplay");
				})
				$(".replayInputBox .iconSend").click(function() {
					var text = $(".replayInputBox .input").html();
					var strReplay = '<div class="commentInfo"><div class="comleft"><img src="' + userPhoto +
						'" class="comIcon h60"></div><div class="comcenter"><p class="title">' + userName +
						'</p><div class="replay"><p class="text textCopy">' + text +
						'<span class="comtime">刚刚</span></p></div></div><div class="comright"><p class="heartIcon"><img src="images/icon_heart.png" class="heart"><img src="images/icon_heartBule.png" class="heartActive"><span>0</span></p></div></div>';
					$(".currentReplay").append(strReplay);
					$(".replayInputBox").hide();
					$(".commentInputBox").show();
					$(".input").html('');
					$(".iconSend").hide();
				})

				//收藏点击效果
				$(".footHeart").click(function() {
					$(this).toggleClass('active');
					var num = parseInt($(this).find('span').html());
					if ($(this).hasClass("active")) {
						$(this).find('span').html(parseInt(num + 1))
					} else {
						$(this).find('span').html(num - 1)
					}
				})
				$(".comList").on("click", '.heartIcon', function() {
					$(this).toggleClass('active');
					var num = parseInt($(this).find('span').html());
					if ($(this).hasClass("active")) {
						$(this).find('span').html(parseInt(num + 1))
					} else {
						$(this).find('span').html(num - 1)
					}
				})




			})
		</script>
