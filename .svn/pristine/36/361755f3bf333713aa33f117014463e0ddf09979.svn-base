		<script src="js/jquery-2.0.2.js" type="text/javascript" charset="utf-8"></script>
		<script src="js/swiper.min.js" type="text/javascript" charset="utf-8"></script>
		<script type="text/javascript">
			$(function(){
				//搜索框聚焦效果
				$(".search").keyup(function(){
					if($(this).val().length){
						$(".removeIcon").show();
						$(".navBar").addClass("searchNavBar");
						$(".mainSearch").hide();
						$(".searchResult").show();
					}else {
						$(".navBar").removeClass("searchNavBar");
						$(".mainSearch").show();
						$(".searchResult").hide();
					}
				})
				//清空输入内容
				$(".removeIcon").click(function(){
					$(".search").val('');
					$(".search").focus();
				})
				//作者朝代轮播
				var swiper = new Swiper('.swiper-container',{
					slidesPerView : 4.5
				});
				//朝代选中效果
				$(".authorSwiper .lists").click(function(){
					$(".authorSwiper .lists").removeClass('active');
					$(this).addClass("active");
				})
				//作者作品展示效果
				$(".nameauthor").click(function(){
					$(this).next(".sourseList").slideToggle();
					$(this).parent().siblings().find(".sourseList").slideUp();
				})
			})
		</script>
