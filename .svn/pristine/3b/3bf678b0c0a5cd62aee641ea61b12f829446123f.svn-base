		<script type="text/javascript">
			$(function(){
				//搜索框聚焦效果
				$(".search").keyup(function(){
					if($(this).val().length){
						$(".removeIcon").show();
						$(".navBar").addClass("searchNavBar");
						$(".mainSearch").hide();
						$(".searchResult").show();
					}else {
						$(".navBar").removeClass("searchNavBar");
						$(".mainSearch").show();
						$(".searchResult").hide();
					}
				})
				//清空输入内容
